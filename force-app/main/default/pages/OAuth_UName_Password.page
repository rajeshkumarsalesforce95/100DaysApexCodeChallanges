<apex:page controller="OAuth_UName_Password">
    <apex:form >
        <apex:pageBlock title="OAuth_UName_Password" id="one">
            <apex:pageBlockButtons location="top">
                <apex:commandButton value="Request Token" action="{!sendRequest}" reRender="one"/>
                <apex:commandButton value="Request Data" action="{!invoke}" reRender="one"/>
            </apex:pageBlockButtons>
            
            <apex:pageBlockSection columns="1">
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="ClientId :"/>
                    <apex:inputText value="{!clientId}" size="100"/>
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="ClientSecret :"/>
                    <apex:inputText value="{!clientsecret}" size="100"/>
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Username :"/>
                    <apex:inputText value="{!username}" size="100"/>
                </apex:pageBlockSectionItem>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Password :"/>
                    <apex:inputText value="{!password}" size="100"/>
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockSection columns="1" rendered="{! !ISNULL(accessToken)}">
                    <apex:pageBlockSectionItem >
                        <apex:outputLabel value="Industry :"/>
                        <apex:inputText value="{!industry}" size="100"/>
                    </apex:pageBlockSectionItem>
                </apex:pageBlockSection>
                
                {!token}<br/>
                {!result1}
                <br/><br/>
                <apex:pageBlockSection columns="1" rendered="{! !ISNULL(names)}">
                   <apex:dataTable value="{!names}" var="a" width="500" rules="rows" frame="box" cellpadding="10">
                    	<apex:column headerValue="Account Name" value="{!a}"/>
                    </apex:dataTable>
                </apex:pageBlockSection>
                            
            </apex:pageBlockSection>
         
        </apex:pageBlock>
    
    </apex:form>
</apex:page>